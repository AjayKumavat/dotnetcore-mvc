@model Shopify.Models.Product

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section__gradient section__form section__form-link">
    <div class="container body-content">
        <h2 class="heading-secondary heading-secondary--white u-margin-top-huge">Add Product</h2>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddProduct">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control u-font-size-medium" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control u-font-size-medium" asp-items="@(new SelectList(ViewBag.CategoryList, "CategoryId", "CategoryName"))"></select>

                    </div>
                    

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn--main" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="List" class="btn btn--main">Back to List</a>
        </div>

    </div>
</section>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
